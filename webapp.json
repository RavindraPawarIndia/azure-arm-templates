{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "name": "planetneptune-asp",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "F1",
                "capacity": 1
            },
            "properties": {
                "name": "planetneptune-asp"
            }
        },
        {
            "name": "planetneptune-webapp",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', 'planetneptune-asp')]"
            ],
            "properties": {
                "name": "planetneptune-webapp",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'planetneptune-asp')]"
            }
        }
    ]
}